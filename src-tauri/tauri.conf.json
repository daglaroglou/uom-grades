{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-cli/config.schema.json",
  "productName": "UoM Grades",
  "version": "0.1.3",
  "identifier": "com.uomgrades.app",
  "build": {
    "beforeDevCommand": "npm run dev:next",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run build:next",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "UoM Grades",
        "width": 1024,
        "height": 768,
        "minWidth": 480,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "languages": [
          "English",
          "Greek"
        ],
        "displayLanguageSelector": false,
        "installerIcon": "icons/icon.ico"
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}